<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
  <div class="container">
    <h1>Url Shortner</h1>
    <form required action="/shortURLs" method="post" class="my-4 form-check-inline">
      <label for="ogURL" class="sr-only">URL</label>
      <input  type="url" name="ogURL" id="ogURL" placeholder="URL" class="form-control col mr-2">
      <input type="text" name="description" id="description" placeholder="Description" class="form-control col mr-2">
      <button class="btn btn-success" type="submit">Let's Go</button>
    </form>
    <table class="table table-striped table-responsive">
      <thead>
        <tr>
          <th> Og URL</th>
          <th> Short URL</th>
          <th> count</th>
          <th> Description</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortURL => {%>
          <tr>
            <td>
              <a href="<%=shortURL.og %>"> <%= shortURL.og %></a>
            </td>
            <td>
              <a href="<%=shortURL.short %>"><%= shortURL.short %></a>
            </td>
            <td><%= shortURL.clicks %></td>
            <td><%= shortURL.description %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
